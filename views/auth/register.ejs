                                <i class="ri-user-line text-gray-400"></i>
                            </div>
                            <input type="text" id="fullName" name="fullName" class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded !rounded-button text-gray-700 focus:border-primary" placeholder="Enter your full name" required>
                        </div>
                        <div class="error-message text-red-500 text-sm mt-1 hidden"></div>
                    </div>
                    
                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-gray-700 font-medium mb-1">Email Address*</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                                <i class="ri-mail-line text-gray-400"></i>
                            </div>
                            <input type="email" id="email" name="email" class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded !rounded-button text-gray-700 focus:border-primary" placeholder="Enter your email address" required>
